<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_marginTop="16dp"
                                             android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:id="@+id/row_to_message_cardview"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/row_to_username_time_tv">
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <TextView
                    android:fontFamily="@font/lato_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:maxWidth="240dp"
                    android:text="I don't know either!!! "
                    android:padding="10dp"
                    android:id="@+id/row_to_message_tv"
                    android:textColor="@color/myblue"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/vote_frament_subject_owner_imageview"
                    android:textSize="16sp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <TextView
            android:text="Vic Huang, 9:02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_to_username_time_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/row_to_message_cardview"
            app:layout_constraintVertical_bias="0.25"/>


</android.support.constraint.ConstraintLayout>