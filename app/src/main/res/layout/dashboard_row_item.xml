<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginTop="10dp"
>
    <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/dashboard_row_item_imageview"/>

    <TextView
            android:text="History"
            android:fontFamily="@font/sree_krushnadevaraya"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/dashboard_row_item_imageview"
            android:layout_marginStart="16dp"
            android:id="@+id/dashboard_row_item_textview"
            app:layout_constraintStart_toEndOf="@+id/dashboard_row_item_imageview"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/dashboard_row_item_imageview"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="24sp"
            android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>