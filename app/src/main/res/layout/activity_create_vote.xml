<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBg"
        tools:context=".votes.CreateVoteActivity">
    <ImageView
            android:layout_width="120dp"
            android:layout_height="37dp" app:srcCompat="@drawable/artboard1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/title_image"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Create Your Vote Subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="180dp"
            app:layout_constraintTop_toBottomOf="@+id/title_image" android:textSize="36sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sree_krushnadevaraya"
            android:textStyle="bold" />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintTop_toBottomOf="@id/textView4"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginTop="16dp"
                  android:layout_marginStart="48dp"
                  android:layout_marginEnd="48dp"
    >
        <EditText
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:ems="10"
                android:fontFamily="@font/sree_krushnadevaraya"
                android:background="@drawable/selector_bg_edit_2"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="20dp"
                android:gravity="center"

                android:id="@+id/create_subject_et"
                android:hint="Subject"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="60dp"
                  android:text="Hint: The subject doesn't be too long, you should explain the vote main purpose to the participant face to face "
                  android:textAppearance="@style/TextAppearance.AppCompat"
                  android:fontFamily="@font/sree_krushnadevaraya" android:textSize="18sp"
                  android:textColor="@color/colorAccent"/>


    </LinearLayout>

    <Button
            android:text="Create Subject"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="80dp"
            android:background="@color/golden"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/sree_krushnadevaraya"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/create_create_subject_btn"/>

</android.support.constraint.ConstraintLayout>