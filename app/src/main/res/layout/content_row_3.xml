<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_height="match_parent">
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        app:cardUseCompatPadding="true"
                                        app:cardElevation="2dp"
                                        app:cardCornerRadius="10dp"
                                        android:elevation="8dp"
                                        app:cardBackgroundColor="#74b9ff"
                                        android:clipChildren="false"
                                        android:clipToPadding="false"
                                        android:layout_height="300dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
    >
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

            <TextView
                    android:text="D:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/content_row_3_result_d_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/content_row_3_piechart"
                    app:layout_constraintBottom_toBottomOf="@+id/content_row_3_result_b_tv" android:textSize="24sp"/>
            <TextView
                    android:text="C:"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_row_3_result_c_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/content_row_3_piechart"
                    app:layout_constraintTop_toTopOf="@+id/content_row_3_result_a_tv" android:textSize="24sp"/>
            <TextView
                    android:text="B:"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_row_3_result_b_tv"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/content_row_3_result_a_tv"
                    app:layout_constraintStart_toStartOf="@+id/content_row_3_result_a_tv" android:textSize="24sp"/>
            <TextView
                    android:text="A:"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_row_3_result_a_tv"
                    app:layout_constraintEnd_toStartOf="@+id/content_row_3_piechart"
                    android:layout_marginEnd="36dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
                    android:layout_marginTop="28dp" android:textSize="24sp"/>
            <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:text="Result:"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" android:layout_marginTop="4dp"
                    app:layout_constraintHorizontal_bias="0.044" android:id="@+id/textView3" android:textSize="18sp"/>
            <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:id="@+id/content_row_3_piechart"

                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
            >

            </com.github.mikephil.charting.charts.PieChart>



        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>