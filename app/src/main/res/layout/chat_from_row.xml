<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_marginTop="16dp"
                                             android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@color/myblue"
            app:civ_border_width="1dp"
            android:src="@drawable/concept_chat2"
            android:layout_width="60dp"
            android:layout_height="60dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/row_circleImageView"/>

    <android.support.v7.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/row_from_message_cardview" app:layout_constraintStart_toEndOf="@+id/row_circleImageView"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/row_circleImageView">
        <android.support.constraint.ConstraintLayout
                android:background="@drawable/gradient_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <TextView
                    android:fontFamily="@font/lato_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:maxWidth="240dp"
                    android:text="what are the teacher talking aboub?? Does any one realize the course? "
                    android:padding="10dp"
                    android:id="@+id/row_from_message_tv"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/vote_frament_subject_owner_imageview"
                    android:textSize="16sp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <TextView
            android:text="Jerry Chen, 9:02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row__from_username_time_tv" app:layout_constraintStart_toEndOf="@+id/row_circleImageView"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/row_from_message_cardview" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintVertical_bias="1.0"/>


</android.support.constraint.ConstraintLayout>