<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBg"
        tools:context=".votes.CreateOptionsActivity">
    <ImageView
            android:layout_width="120dp"
            android:layout_height="37dp" app:srcCompat="@drawable/artboard1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/title_image"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Create Your Options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/title_image"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sree_krushnadevaraya"
            android:textStyle="bold"
    />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintTop_toBottomOf="@id/textView4"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginTop="16dp"
                  android:layout_marginStart="48dp"
                  android:layout_marginEnd="48dp"
    >
        <TextView android:layout_width="wrap_content"
                  android:text="Susbject:"
                  android:textSize="20sp"
                  android:textColor="@android:color/white"
                  android:fontFamily="@font/sree_krushnadevaraya"
                  android:textStyle="bold"
                  android:id="@+id/create_options_subject_tv"
                  android:layout_height="wrap_content"/>

        <EditText
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:ems="10"
                android:fontFamily="@font/sree_krushnadevaraya"
                android:background="@drawable/selector_bg_edit_2"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/create_options_option_a_ev"
                android:hint="Option A"
        />
        <EditText
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:ems="10"
                android:fontFamily="@font/sree_krushnadevaraya"
                android:background="@drawable/selector_bg_edit_2"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/create_options_option_b_ev"
                android:hint="Option B"
        />
        <EditText
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:ems="10"
                android:fontFamily="@font/sree_krushnadevaraya"
                android:background="@drawable/selector_bg_edit_2"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/create_options_option_c_ev"
                android:hint="Option C"
        />
        <EditText
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:ems="10"
                android:fontFamily="@font/sree_krushnadevaraya"
                android:background="@drawable/selector_bg_edit_2"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/create_options_option_d_ev"
                android:hint="Option D"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:text="Hint: Please make the option description as short as possible"
                  android:textAppearance="@style/TextAppearance.AppCompat"
                  android:fontFamily="@font/sree_krushnadevaraya"
                  android:textSize="18sp"
                  android:textColor="@color/colorAccent"
        />


    </LinearLayout>

    <Button
            android:text="Create Option Descriptions"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="80dp"
            android:background="@color/golden"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/sree_krushnadevaraya"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/create_create_option_description_btn"/>

</android.support.constraint.ConstraintLayout>