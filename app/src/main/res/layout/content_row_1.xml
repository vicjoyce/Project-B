<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        app:cardUseCompatPadding="true"
                                        app:cardElevation="2dp"
                                        app:cardCornerRadius="10dp"
                                        app:cardBackgroundColor="#fff"
                                        android:elevation="8dp"
                                        android:clipChildren="false"
                                        android:id="@+id/folding_cell_title_cardView"
                                        android:clipToPadding="false"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        android:layout_height="100dp">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

            <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="0dp"
                    android:text="Question Title"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content" android:textSize="24sp" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" android:layout_marginTop="4dp"

                    android:textAllCaps="false" android:id="@+id/content_1_question_title_tv"
                    android:fontFamily="@font/roboto_bold"/>
            <TextView
                    android:text="createtime"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_1_create_time_tv" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@android:color/darker_gray" android:layout_marginBottom="8dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_poll_black_24dp"
                    android:id="@+id/imageView4" android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="224dp"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_1_vote_quantity_tv"
                    app:layout_constraintTop_toTopOf="@+id/imageView4" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_question_answer_black_24dp"
                    android:id="@+id/imageView8" app:layout_constraintStart_toEndOf="@+id/content_1_vote_quantity_tv"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@+id/content_1_vote_quantity_tv"
                    app:layout_constraintBottom_toBottomOf="@+id/content_1_vote_quantity_tv"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_1_message_quantity_tv"
                    app:layout_constraintTop_toTopOf="@+id/imageView8"
                    app:layout_constraintStart_toEndOf="@+id/imageView8"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                    android:layout_marginStart="16dp"/>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>