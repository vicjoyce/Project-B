<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:background="@drawable/splash_background"
        android:layout_height="match_parent"
        tools:context=".votes.SubmitVoteActivity">


    <android.support.v7.widget.CardView
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:elevation="8dp"
            android:layout_width="158dp"
            android:layout_height="169dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:id="@+id/cardView_d">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scaleType="fitXY"

                    app:srcCompat="@drawable/option_d"
                    android:id="@+id/imageView_d"/>
            <View android:layout_width="100dp" android:layout_height="0.5dp"
                  android:background="@color/myblue"
                  app:layout_constraintTop_toBottomOf="@id/imageView_d"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginTop="8dp"

            />
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/lato_bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkBg"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/imageView_d"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"


                    android:id="@+id/submit_option_d_tv"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:elevation="8dp"
            android:layout_width="158dp"
            android:layout_height="169dp"
            android:layout_marginBottom="44dp"
            android:id="@+id/cardView_b"
            app:layout_constraintBottom_toTopOf="@+id/cardView_d"
            app:layout_constraintEnd_toEndOf="@+id/cardView_d">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scaleType="fitXY"


                    app:srcCompat="@drawable/option_b"
                    android:id="@+id/imageView_b"/>
            <View android:layout_width="100dp" android:layout_height="0.5dp"
                  android:background="@color/myblue"
                  app:layout_constraintTop_toBottomOf="@id/imageView_b"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginTop="8dp"

            />
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/lato_bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkBg"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/imageView_b"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"


                    android:id="@+id/submit_option_b_tv"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView

            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:elevation="8dp"
            android:layout_width="158dp"
            android:layout_height="169dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/cardView_c">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scaleType="fitXY"

                    app:srcCompat="@drawable/option_c"
                    tools:layout_editor_absoluteY="0dp"
                   android:id="@+id/imageView_c"/>
            <View android:layout_width="100dp" android:layout_height="0.5dp"
                  android:background="@color/myblue"
                  app:layout_constraintTop_toBottomOf="@id/imageView_c"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginTop="8dp"

            />
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/lato_bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkBg"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/imageView_c"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    android:id="@+id/submit_option_c_tv"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView

            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:elevation="8dp"
            android:layout_width="158dp"
            android:layout_height="169dp"
            android:layout_marginBottom="44dp"
            android:id="@+id/cardView_a"
            app:layout_constraintBottom_toTopOf="@+id/cardView_c"
            app:layout_constraintStart_toStartOf="@+id/cardView_c">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scaleType="fitXY"

                    app:srcCompat="@drawable/option_a"
                    tools:layout_editor_absoluteY="2dp" tools:layout_editor_absoluteX="0dp"
                    android:id="@+id/imageView_a"/>
            <View android:layout_width="100dp" android:layout_height="0.5dp"
                  android:background="@color/myblue"
                  app:layout_constraintTop_toBottomOf="@id/imageView_a"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginTop="8dp"

            />
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/lato_bold"
                    android:textSize="16sp"
                    android:textColor="@color/darkBg"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/imageView_a"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"


                    android:id="@+id/submit_option_a_tv"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


    <View
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:background="@color/darkBg"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/view" app:layout_constraintHorizontal_bias="1.0"
    />
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@id/text_linearlayout"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        android:id="@+id/header_cardview"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="8dp"


                                        app:cardElevation="10dp"
                                        app:cardCornerRadius="20dp"
                                        android:elevation="8dp"
                                        android:layout_marginBottom="30dp"
                                        app:layout_constraintBottom_toTopOf="@+id/cardView_b">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@color/mygreen"




                android:id="@+id/linearLayout3">
            <Button
                    android:text="Submit"
                    android:layout_width="100dp"
                    android:background="@drawable/round_shape_5"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" android:id="@+id/submit_submit_btn" android:layout_weight="2"
                    android:layout_marginRight="30dp"
            />
            <TextView
                    android:text="Vote Time:"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_weight="1"/>
            <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/submit_number_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:np_width="48dp"
                    app:np_height="200dp"
                    app:np_dividerColor="@color/white"
                    android:layout_weight="1"
                    app:np_fadingEdgeEnabled="true"
                    app:np_scrollerEnabled="true"

                    app:np_max="10"
                    app:np_min="3"
                    app:np_selectedTextColor="@color/white"
                    app:np_selectedTextSize="20sp"
                    app:np_textColor="@color/myblue"
                    app:np_textSize="32sp"
                    app:np_value="3"/>
            <TextView
                    android:text="Mins"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="5"
                    android:textSize="20sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
            android:text="@string/submit_subject"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/golden"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit_subject_tv" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="64dp"

                  android:id="@+id/text_linearlayout"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/header_cardview"
                  android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@+id/submit_subject_tv"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp">
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView
                    android:text="TextView"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/golden"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/sree_krushnadevaraya"
                    android:layout_height="wrap_content"
                    android:id="@+id/submit_subject_content_tv"
                    android:textSize="20sp"
                 />
        </ScrollView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>